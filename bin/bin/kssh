#!/bin/bash

copy_to_clipboard="echo {} | awk '{print \$1}' | xargs echo -n | pbcopy"

current_context=$(kubectl config current-context)
selection=($(kubectl get pods | grep -v ^NAME | fzf --multi --query="$@" --header="$current_context" --bind "ctrl-y:execute-silent($copy_to_clipboard)" | awk '{print $1}'))

if [ ${#selection[@]} -eq 1 ]; then
    echo "${selection[0]}"
    kubectl exec -ti ${selection[0]} -- bash
elif [ ${#selection[@]} -gt 1 ]; then
    echo "${selection[@]}"
    echo "${selection[@]}" | xargs mssh-k8s
else
    exit 0
fi
