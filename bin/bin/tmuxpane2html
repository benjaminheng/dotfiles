#!/bin/bash
set -euo pipefail

pane=""
inline=""
include_scrollback=""

while [[ $# -gt 0 ]]
do
key="$1"
case $key in
    # Format is what tmux would accept as a valid `target-pane`. See the tmux
    # docs for more info.
    --pane|-t)
        pane="$2"
        shift
        shift
        ;;
    --inline)
        inline="true"
        shift
        ;;
    --include-scrollback)
        include_scrollback="true"
        shift
        ;;
    *)
        shift
        ;;
esac
done

[ -z "$pane" ] && echo "--pane required" >&2 && exit 1

capturepane_flags=( "-t" "$pane" "-e" "-b" "tmuxpane2html_buffer" )
if [ "$include_scrollback" = "true" ]; then
    capturepane_flags+=("-S" "-9999")
fi
tmux capture-pane "${capturepane_flags[@]}"
tmux save-buffer -b tmuxpane2html_buffer /tmp/tmuxpane2html.output
ansi2html_flags=( "-W" )
if [ "$inline" = "true" ]; then
    ansi2html_flags+=("-p" "-i")
fi
html_output=$(~/.pyenv/versions/ansi2html/bin/ansi2html "${ansi2html_flags[@]}" < /tmp/tmuxpane2html.output)

if [ "$inline" = "true" ]; then
    echo '<div class="ansi2html">'
    echo '<pre class="ansi2html-content">'
    echo "$html_output"
    echo '</pre>'
    echo '</div>'
else
    echo "$html_output"
fi
